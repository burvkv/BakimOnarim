@model UserSignUpViewModel
@{Layout = "_authlayout";}

<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
          class="img-fluid pb-10" alt="Phone image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        <form role="form" asp-action="Login" method="post" >
          <!-- Email input -->
          <div class="form-outline mb-4">
            <span asp-validation-for="@Model.Username" class="text-danger"></span>
            <input type="text" class="form-control " asp-for="@Model.Username" placeholder="name@example.com"/>
            <label class="form-label pt-2" for="form1Example13">Kullanıcı Adı</label>
          </div>

          <div class="form-outline mb-4">
              <span asp-validation-for="@Model.Mail" class="text-danger"></span>
            <input type="text" class="form-control " asp-for="@Model.Mail" placeholder="name@example.com"/>
            <label class="form-label pt-2" for="form1Example13">Email</label>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-4">
              <span asp-validation-for="@Model.Password" class="text-danger"></span>
            <input type="password" class="form-control" asp-for="@Model.Password" placeholder="..........."/>
            <label class="form-label pt-2" for="form1Example23">Parola</label>
          </div>

          <div class="form-outline mb-4">
              <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            <input type="password" class="form-control" asp-for="@Model.ConfirmPassword" placeholder="..........."/>
            <label class="form-label pt-2" for="form1Example23">Parola Tekrar</label>
          </div>

          <div class="d-flex justify-content-around align-items-center mb-4">
            <!-- Checkbox -->
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="" id="form1Example3" checked />
              <label class="form-check-label" for="form1Example3"><a href="#">Kullanıcı Şartlarını</a> okudum ve kabul ediyorum. </label>
            </div>
          </div>

          <!-- Submit button -->
          <button type="submit" class="btn btn-primary btn-lg w-100">Kayıt Ol</button>

          <div class="divider d-flex align-items-center my-4">
            <p class="text-center fw-bold mx-3 mb-0 text-muted">HHT Yazılım. Tüm Hakları Saklıdır.</p>
          </div>


        </form>
      </div>
    </div>
  </div>
</section>
